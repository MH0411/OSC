<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svRegisterStockist"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ivRegisterStockist"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="20dp"
                android:onClick="uploadImage"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tfRegStockistID"
                android:hint="StockistID"
                android:singleLine="true"
                android:layout_below="@+id/ivRegisterStockist"
                android:layout_alignEnd="@+id/tfRegName"
                android:layout_alignParentStart="true"
                android:focusable="false"
                android:layout_marginTop="10dp"
                android:editable="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tfRegName"
                android:layout_below="@+id/tfRegStockistID"
                android:layout_alignParentStart="true"
                android:hint="Name"
                android:singleLine="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/tfRegPassword"
                android:layout_below="@+id/tfRegName"
                android:layout_alignParentStart="true"
                android:hint="Password"
                android:singleLine="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/tfRegIC"
                android:layout_below="@+id/tfRegPassword"
                android:layout_alignParentStart="true"
                android:hint="IC (eg. xxxxxxxxxxxx)"
                android:singleLine="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/tfRegTel"
                android:layout_below="@+id/tfRegIC"
                android:layout_alignParentStart="true"
                android:hint="Tel (eg. 012xxxxxxx)"
                android:singleLine="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/tfRegEmail"
                android:layout_below="@+id/tfRegTel"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:hint="Email"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tfRegAddress"
                android:layout_below="@+id/tfRegEmail"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:hint="Address"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/bRegRegister"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="40dp"
                android:onClick="register"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
