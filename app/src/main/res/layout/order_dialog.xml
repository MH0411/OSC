<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_below="@+id/tfOrderAmount"
        android:layout_alignEnd="@+id/ibPlus" />

    <Button
        android:id="@+id/dialogButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/tfOrderAmount"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tfOrderQuantity"
        android:editable="true"
        android:layout_alignBottom="@+id/ibMinus"
        android:layout_toEndOf="@+id/dialogButtonCancel" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibPlus"
        android:src="@android:drawable/arrow_up_float"
        android:layout_marginStart="56dp"
        android:layout_alignBottom="@+id/tfOrderQuantity"
        android:layout_toEndOf="@+id/tvOrderQuantity" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibMinus"
        android:src="@android:drawable/arrow_down_float"
        android:layout_below="@+id/tvOrderQuantity"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity to Order:"
        android:id="@+id/tvOrderQuantity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount:"
        android:id="@+id/tvOrderAmount"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvOrderCost"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/tfOrderAmount"
        android:layout_below="@+id/tvOrderAmount"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/dialogButtonOK"
        android:editable="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cost:"
        android:id="@+id/tvOrderCost"
        android:layout_below="@+id/tfOrderQuantity"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>